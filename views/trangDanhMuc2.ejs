<%- include("partials/header.ejs") %>

    <div class="page-container">

        <div class="image-title">
            <!-- <img src="/../assets/trangDanhMuc2Images/anhHeader.png" alt="việt nam vô địch" /> -->
            <img src="/../assets/trangDanhMucBackgroundImages/glassPanelTrangChu.png" alt="" class="glass-panel"/>
            <div class="title">
                <h1><%= categoryData[0].category_name %></h1>
            </div>
        </div>

        <div class="option-panel">
            <div class="dropdown dropdown option-panel-order">
                <a class="btn btn-secondary dropdown-toggle  btn-lg" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                  Tùy chọn
                </a>
              
                <ul class="dropdown-menu dropdown-menu-dark">
                  <li><a class="dropdown-item" href="/category/secondcategory/<%= categoryData[0].alias_name %>?page=1&limit=10&option=oldest">Cũ nhất</a></li>
                  <li><a class="dropdown-item" href="/category/secondcategory/<%= categoryData[0].alias_name %>?page=1&limit=10&option=latest">Mới nhất</a></li>
                  <li><a class="dropdown-item" href="/category/secondcategory/<%= categoryData[0].alias_name %>?page=1&limit=10&option=view">Nhiều lượt xem</a></li>
                  <li><a class="dropdown-item" href="/category/secondcategory/<%= categoryData[0].alias_name %>?page=1&limit=10&option=like">Nhiều lượt thích</a></li>
                </ul>
            </div>
        </div>
        
    
        <div class="section-1020">

            <img class="redLine" src="/../assets/trangDanhMuc2Images/dongKeMauDo.png"/>

            <% if ( articles.length ) { %>
                <% for ( let i = 0; i < articles.length; i++ ) { %>
                    <div class="search-items">
                        <div class="image">
                            <a href="/article/transportArticle/<%= articles[i].name_alias %>">
                                <img src="<%= articles[i].hero_image %>" alt="">
                            </a>
                        </div>
                        <div class="content">
                            <a href="/article/transportArticle/<%= articles[i].name_alias %>"><div class="title-section"><%= articles[i].heading %></div></a>
                            <div class="date"><%= articles[i].day_created %></div>
                            <div class="description">
                                <p>
                                    <a href="/article/transportArticle/<%= articles[i].name_alias %>">
                                        <%= articles[i].content %>
                                    </a>
                                </p>
                            </div>
                        </div>
                    </div>
                <% } %>
            <% } else { %>
                <div class="no-article-container">
                    <img src="/../assets/noArticle.png" alt="" class="no-article-img">
                    <h2 class="no-article-heading">Danh mục hiện chưa có bài viết !</h2>
                </div>
            <% } %>
    
            <% if ( pageStatus.total > 1 ) { %>
                <nav aria-label="...">
                    <ul class="pagination mt-5 px-1 justify-content-end">
                        <% if (pageStatus.previous) { %>
                            <li class="page-item">
                                <a class="page-link" href="?page=<%= pageStatus.previous.page %>&limit=<%= pageStatus.previous.limit %>">Previous</a>
                            </li>
                        <% } else { %>
                            <li class="page-item disabled">
                                <a class="page-link" href="">Previous</a>
                            </li>
                        <% }%>
                            
                        <div class="page-link">
                            <% if (pageStatus.previous) { %>
                                <p class="page-link-p"><%= pageStatus.previous.page + 1 %>/<%= pageStatus.total %></p>
                            <% } else { %>
                                <p class="page-link-p"> 1/<%= pageStatus.total %></p>
                            <% } %>
                        </div> 
            
                        <% if (pageStatus.next) { %>
                            <li class="page-item">
                                <a class="page-link" href="?page=<%= pageStatus.next.page %>&limit=<%= pageStatus.next.limit %>">Next</a>
                            </li>
                        <% } else { %>
                            <li class="page-item disabled">
                                <a class="page-link" href="">Next</a>
                            </li>
                        <% }%>
                    </ul>
                </nav>
            <% } %>

        </div>
        
<%- include("partials/footer.ejs") %>